# Server Configuration
PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
# For Neon: postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/pos_system

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS - Frontend URL(s)
# For multiple origins, separate with commas: https://app.vercel.app,http://localhost:5173
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@possystem.com

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15
PASSWORD_RESET_EXPIRY=60
TWO_FACTOR_ISSUER=POS System

# App
APP_NAME=POS System
APP_URL=http://localhost:5173
